<%= render "shared/admin_nav" %>
<h1>Edit Your Image</h1>

<%= form_for :image, url: image_path(@image), method: :patch do |f| %>

  <% if @image.errors.any? %>
    <div id ="error_explanation">
    <h2>
      <%= pluralize(@image.errors.count, "error") %>
      prohibited this image from being saved:
    </h2>
    <ul>
      <% @image.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <%= image_tag(@image.url) %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :picture %><br>
    <%= f.file_field :picture %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>

  <%= link_to 'Back', images_path %>
